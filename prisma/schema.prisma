generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://${env("PGUSER")}:${env("PGPASSWORD")}@${env("PGHOST")}:${env("PGPORT")}/${env("PGDATABASE")}?sslmode=require"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
